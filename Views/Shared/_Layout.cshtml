<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Каталог гастрономических фестивалей</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/shared.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login_and_registration.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DaviskibaMaksim.styles.css" asp-append-version="true" />
</head>
<body>
<header class="main-header">
    <div class="top-bar">
        <div class="logo">GastroFest</div>
        <div class="auth-buttons">
            <button class="btn-login">Войти</button>
            <button class="btn-register">Регистрация</button>
        </div>
    </div>

    <div class="hero">
        <img src="~/images/festival-banner.jpg" alt="Gastro Festival" class="hero-img" />
        <nav class="main-nav">
            <ul>
                <li><a href="/">Главная</a></li>
                <li><a href="/Home/SiteInformation">О нас</a></li>
                <li><a href="/Home/Events">Фестивали</a></li>
                <li><a href="/Home/Contacts">Контакты</a></li>
            </ul>
        </nav>
    </div>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="main-footer">
    <p>© 2025 — Каталог гастрономических фестивалей</p>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/shared_script.js"></script>
</body>

</html>
